{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "your_context7_api_key_here"],
      "description": "Context7 MCP for vector search and RAG capabilities"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Playwright MCP for browser automation and web testing"
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@vercel/mcp"],
      "description": "Vercel MCP for deployment and hosting operations"
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase",
        "--read-only",
        "--project-ref=your_supabase_project_ref"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "your_supabase_access_token"
      },
      "description": "Supabase MCP for database operations"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@github/github-mcp-server"],
      "env": {
        "GITHUB_TOKEN": "your_github_token"
      },
      "description": "GitHub MCP for repository operations and code management"
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ],
      "description": "Serena MCP for semantic code analysis and editing"
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "@firecrawl/mcp-server"],
      "env": {
        "FIRECRAWL_API_KEY": "your_firecrawl_api_key_here"
      },
      "description": "Firecrawl MCP for web scraping and content extraction"
    },
    "resend": {
      "command": "npx",
      "args": ["-y", "@resend/mcp-server"],
      "env": {
        "RESEND_API_KEY": "re_RC78Nz9Z_FnAVBnstfxwxx21mYTD2yeD3",
        "SENDER_EMAIL_ADDRESS": "noreply@vocilia.com"
      },
      "description": "Resend MCP for email sending and management"
    }

  }
}